
<%= render 'form.index' %>
 <div class="backend_header" id="main-header" class="py-2 bg-primary text-white">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1><i class="fa fa-graduation-cap" aria-hidden="true"></i>  Course</h1>
        </div>
      </div>
    </div>
  </div>

  <!-- ACTIONS -->
  <section id="action" class="py-4 mb-4 bg-light">
    <div class="container">
      <div class="row">

        <div class="col-md-3">
          <%= link_to new_course_path,  class:"btn btn-success btn-block" do %>
            <i class="fa fa-plus"></i> Create Course
          <% end %>
        </div>

      </div>
    </div>
  </section>


  <section id="posts">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <h4>Course Lists</h4>
            </div>
            <!-- <table class="table table-striped"> -->

            <table class="table table-hover">
              <!-- <thead class="thead-inverse"> -->

               <thead>
                <tr>
                  <th>#</th>
                  <th>Course Name</th>
                  <th>Total Hours</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                  <% @courses.each do |course| %>
                <tr>
                  <td scope="row">1</td>
                  <td><%= course.course_name %></td>
                  <td>  <%= course.total_hours %></td>


                  <td>
                     <%= link_to course_path(course), class: "btn btn-secondary" do %>
                          <h6><i class="fa fa-info"  aria-hidden="true"></i> Show </h6>

                    <% end %>
                    <!-- <%= link_to "Open modal", "#addPostModal", :class => "btn btn-secondary", "data-toggle" => "modal" %> -->
                  </td>

                   <td>
                    <%= link_to edit_course_path(course), class: "btn btn-secondary" do %>
                        <h6>  <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit </h6>
                    <% end %>

                    </td>
                    <td>
                       <%= link_to course, 'data-method': "DELETE", class: "btn btn-secondary" do %>
                       <h6>  <i class="fa fa-trash-o" aria-hidden="true"></i> Delete </h6>

                      <% end %>
                    </td>
                </tr>
                <% end %>


              </tbody>
            </table>
          </div>

  </section>

