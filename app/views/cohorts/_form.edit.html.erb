<%= render 'form.index' %>
 <div class="backend_header" id="main-header" class="py-2 bg-primary text-white">
  <div class="container">
   <div class="row">
    <div class="col-md-6">
      <h1>  <i class="fa fa-gear"></i> New Cohort </h1>
    </div>
    </div>
  </div>
</div>
 <h2> Cohort Editorial Page</h2>
 <div class="" id="#addPostModal">
  <div class="modal-dialog modal-lg">
   <div class="modal-content">
    <div class="modal-header bg-primary text-white">
     <h5 class="modal-title">Edit Cohort Information</h5>
    </div>
    <div class="modal-body">
     <%=  form_for @cohort do |f| %>
      <div class="field form-group">
       <%= f.label :Name %>
       <%= f.text_field :name, class:"form-control"  %>
      </div>
      <div class="form-group">
       <%= f.label :Insturctor %>
       <%= f.text_field :instructor, class:"form-control"  %>
      </div>
      <div class="form-group">
       <%= f.label :Start_Date %>
       <%= f.date_field :start_date, class:"form-control" %>
      </div>
      <div class="form-group">
       <%= f.label :End_Date %>
       <%= f.date_field :end_date, class:"form-control" %>
      </div>
      <div class="form-group">
       <%= f.label :course_id, 'Select Course:' %>
       <%= f.select :course_id, options_for_select(@course_all.collect {|c| [ c.course_name, c.id ] },
       @cohort.course_id), {include_blank: 'Select Course'}%>
     </div>
   </div>
   <div class="modal-footer">
     <%= f.submit "Save", class:"btn btn-primary" %>
   </div>
   <% end %>
 </div>
</div>
