<%= form_for @cohort do |f| %>

     <div>
                 <%= f.label :Name %>
                 <%= f.text_field :name %>
     </div>
     <div>
                 <%= f.label :instructor %>
                 <%= f.text_field :instructor %>
     </div>
     <div>
                 <%= f.label :start_date %>
                 <%= f.date_field :start_date %>
     </div>
     <div>
                 <%= f.label :end_date %>
                 <%= f.date_field :end_date %>
     </div>
     <div>




     </div>

     <div class="">
         <%= f.label :course_id, 'Select Course:' %><br>
         <%= f.select :course_id, options_for_select(@courses.collect {|c| [ c.course_name, c.id ] }, {include_blank: 'Select Course'})%>
      </div>

     <div>
                   <%= f.submit %>
     </div>

<% end %>
