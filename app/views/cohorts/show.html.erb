    <h4 class="card-title">Cohort Name</h4>
    <p class="card-text">  <%= @cohort.name %></p>
  </div>

  <div>
  <h4 class="card-title">Course Name</h4>
  <p class="card-text">  <%= @cohort.course.course_name %></p>
</div>
  <div class="card-body">
    <h4 class="card-title">Instructor</h4>
    <p class="card-text">  <%= @cohort.instructor %></p>
  </div>
  <div class="card-body">
    <h4 class="card-title">Start Date</h4>
    <p class="card-text">  <%= @cohort.start_date %></p>
  </div>
  <div class="card-body">
    <h4 class="card-title">End Date</h4>
    <p class="card-text">  <%= @cohort.end_date %></p>
  </div>
  <div>
