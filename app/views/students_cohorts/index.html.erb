<%= render 'form.index' %>
 <div class="backend_header" id="main-header" class="py-2 bg-primary text-white">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1><i class="fa fa-graduation-cap" aria-hidden="true"></i>  Student Cohort</h1>
        </div>
      </div>
    </div>
  </div>
<!-- ACTIONS -->
<section id="action" class="py-4 mb-4 bg-light">
 <div class="container">
  <div class="row">
   <div class="col-md-3">
    <%= link_to new_students_cohort_path,  class:"btn btn-success btn-block" do %>
      <i class="fa fa-plus"></i> Create Student Cohort
    <% end %>
   </div>
  </div>
 </div>
</section>


<!-- POSTS -->
<section id="posts">
 <div class="container">
  <div class="row">
   <div class="col-md-12">
    <div class="card">
     <div class="card-header">
      <h4>Cohort Lists</h4>
     </div>
     <table class="table table-hover">
       <thead>
        <tr class="parent-tr">
          <th>#</th>
          <th>Student Name</th>
          <th>Cohort Name</th>
          <th>Course Name</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
    <tbody>
      <% @students_cohorts.each_with_index do |students_cohort, index| %>
      <tr class="parent-tr">
       <td scope="row"><%= index+1 %></td>
       <td><%= students_cohort.student.full_name %></td>
       <td><%= students_cohort.cohort.name %></td>
       <td><%= students_cohort.cohort.course.course_name %></td>
       <td><%= students_cohort.cohort.start_date %></td>
       <td><%= students_cohort.cohort.end_date %></td>
       <td>
         <%= link_to students_cohort_path(students_cohort), class: "btn btn-secondary" do %>
         <h6><i class="fa fa-info"  aria-hidden="true"></i> Show </h6>
         <% end %>
       </td>
       <td>
         <%= link_to edit_students_cohort_path(students_cohort), class: "btn btn-secondary" do %>
              <h6>  <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit </h6>
         <% end %>

       </td>
       <td>
          <%= link_to students_cohort, method: :delete, remote: true, class: 'delete-todo btn btn-secondary' do %>
          <h6>  <i class="fa fa-trash-o" aria-hidden="true"></i> Delete </h6>
          <% end %>
        </td>
      </tr>
     <% end %>
   </tbody>
  </table>
 </div>
</section>
