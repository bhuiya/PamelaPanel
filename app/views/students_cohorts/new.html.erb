

<%= render 'form.index' %>
 <div class="backend_header" id="main-header" class="py-2 bg-primary text-white">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1><i class="fa fa-graduation-cap" aria-hidden="true"></i>  Student Cohort</h1>
        </div>
      </div>
    </div>
  </div>


<h2> Create Student Cohort Page</h2>

<%= form_for @students_cohorts do |f| %>

  <div class="">
    <%= f.label :student_id, 'Select Student:' %><br>
    <%= f.select :student_id, options_for_select(@students.collect {|c| [ c.full_name, c.id ] }, {include_blank: 'Select Student'})%>
   </div>

   <div class="">
     <%= f.label :cohort_id, 'Select Student:' %><br>
     <%= f.select :cohort_id, options_for_select(@cohorts.collect {|c| [ c.name, c.id ] }, {include_blank: 'Select Cohort'})%>
   </div>


   <div>
         <%= f.submit %>
   </div

<% end %>



 <div class="" id="#addPostModal">
   <div class="modal-dialog modal-lg">
     <div class="modal-content">
       <div class="modal-header bg-primary text-white">
         <h5 class="modal-title">Add New Course Instructor</h5>
         <!-- <button class="close" data-dismiss="modal"><span>&times;</span></button> -->
       </div>
       <div class="modal-body">

         <%= form_for @students_cohorts do |f| %>

         <div class="field form-group">
             <%= f.label :student_id, 'Select Student:' %><br>
             <%= f.select :student_id, options_for_select(@students.collect {|c| [ c.full_name, c.id ] }, {include_blank: 'Select Student'})%>
          </div>

           <div class="field form-group">
              <%= f.label :cohort_id, 'Select Instructor:' %><br>
              <%= f.select :cohort_id, options_for_select(@cohorts.collect {|c| [ c.name, c.id ] }, {include_blank: 'Select Cohort'})%>
           </div>






       <div class="modal-footer">
         <%= f.submit "Save", class:"btn btn-primary" %>
       </div>
       <% end %>
     <div>
 </div>
