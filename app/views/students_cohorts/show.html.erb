<%= render 'form.index' %>
<div class="backend_header" id="main-header" class="py-2 bg-primary text-white">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1><i class="fa fa-gear"></i> Student Cohort </h1>

      </div>
    </div>
  </div>
</div>
<center>
  <h2> Student And Cohort Detail Information</h2>
<div class="card" style="width: 30rem;">

  <div class="card-body">
    <h4 class="card-title">Student Full Name</h4>
    <p class="card-text">  <%= @studentscohort.student.full_name %></p>
  </div>

  <div>
  <h4 class="card-title">Cohort Name</h4>
  <p class="card-text">  <%= @studentscohort.cohort.name %></p>
</div>
  <div class="card-body">
    <h4 class="card-title"> Course Name </h4>
    <p class="card-text">  <%= @studentscohort.cohort.course.course_name %></p>
  </div>
  <div class="card-body">
    <h4 class="card-title">Start Date</h4>
    <p class="card-text">  <%= @studentscohort.cohort.start_date %></p>
  </div>
  <div class="card-body">
    <h4 class="card-title">End Date</h4>
    <p class="card-text">  <%= @studentscohort.cohort.end_date %></p>
  </div>



  <div class="card-body">
      <%= link_to "Back to Sutdents Cohorts", students_cohorts_path %>
  </div>
</div>
</center>





