<%= render 'form.index' %>
<div class="backend_header" id="main-header" class="py-2 bg-primary text-white">
 <div class="container">
  <div class="row">
   <div class="col-md-6">
    <h1><i class="fa fa-graduation-cap" aria-hidden="true"></i>  Student Cohort</h1>
   </div>
  </div>
 </div>
</div>
<h2> Student Editorial Page</h2>
<div class="" id="#addPostModal">
 <div class="modal-dialog modal-lg">
  <div class="modal-content">
   <div class="modal-header bg-primary text-white">
    <h5 class="modal-title">Edit Student Cohort Profile</h5>
   </div>
   <div class="modal-body">
   <%= form_for @student_cohort do |f| %>
     <div class="form-group">
       <%= f.label :course_name, 'Select Course:' %>
       <%= f.select :cohort_id, options_for_select(@cohorts.collect {|c| [ c.name,
                           @student_cohort.cohort_id), {include_blank: 'Select Course'}, class:"form-control" %>
     </div>
     <div class="form-group">
       <%= f.label :student_name, 'Select Student:' %>
       <%= f.select :student_id, options_for_select(@students.collect {|c| [ c.full_name,
                                                     c.id ] },
           @student_cohort.student_id), {include_blank: 'Select Student'}, class:"form-control"%>
     </div>
   </div>
   <div class="modal-footer">
      <%= f.submit "Save", class:"btn btn-primary" %>
   </div>
   <% end %>
  </div>
 </div>
</div>
