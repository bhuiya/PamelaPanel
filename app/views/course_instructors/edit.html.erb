
<%= render 'form.edit' %>
<h2> Course Editorial Page</h2>

<div class="" id="#addPostModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title">Edit Course Profile</h5>
      </div>
      <!-- <div class="modal-body"> -->
      <div class="modal-body">

    <%= form_for @course_instructor do |f| %>


              <div class="form-group">
                 <%= f.label :course_name, 'Select Course:' %>
                 
                     <%= f.select :course_id, options_for_select(@courses.collect {|c| [ c.course_name,
                                                                 c.id ] },
                         @course_instructor.course_id), {include_blank: 'Select Course'}, class:"form-control" %>

              </div>
              <div class="form-group">

                 <%= f.label :instructor_name, 'Select Instructor:' %>
                 <%= f.select :instructor_id, options_for_select(@instructors.collect {|c| [ c.first_name,
                                                             c.id ] },
                     @course_instructor.instructor_id), {include_blank: 'Select Instructor'}, class:"form-control"%>

              </div>
           </div>
        <div class="modal-footer">

                  <%= f.submit "Save", class:"btn btn-primary" %>
            </div>
       <% end %>
    </div>
</div>

</div>
