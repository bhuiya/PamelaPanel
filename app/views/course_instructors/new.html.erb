

<%= render 'form.index' %>
 <div class="backend_header" id="main-header" class="py-2 bg-primary text-white">
   <div class="container">
     <div class="row">
       <div class="col-md-6">
         <h1>  <i class="fa fa-plus"></i> New Course Instructor </h1>

       </div>
     </div>
   </div>
 </div>
 <h2> Course Instructor Insert Record</h2>

 <div class="" id="#addPostModal">
   <div class="modal-dialog modal-lg">
     <div class="modal-content">
       <div class="modal-header bg-primary text-white">
         <h5 class="modal-title">Add New Course Instructor</h5>
         <!-- <button class="close" data-dismiss="modal"><span>&times;</span></button> -->
       </div>
       <div class="modal-body">

         <%= form_for @course_instructor do |f| %>

       <div class="field form-group">
             <%= f.label :course_id, 'Select Course:' %><br>
             <%= f.select :course_id, options_for_select(@courses.collect {|c| [ c.course_name, c.id ] }, {include_blank: 'Select Course'})%>
          </div>

           <div class="field form-group">
              <%= f.label :instructor_id, 'Select Instructor:' %><br>
              <%= f.select :instructor_id, options_for_select(@instructors.collect {|c| [ c.first_name, c.id ] }, {include_blank: 'Select Instructor'})%>
           </div>






       <div class="modal-footer">
         <%= f.submit "Save", class:"btn btn-primary" %>
       </div>
       <% end %>
     <div>
 </div>
