 <%= render 'form.index' %>
  <div class="backend_header" id="main-header" class="py-2 bg-primary text-white">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1>  <i class="fa fa-plus"></i> Insert New Instructor </h1>

        </div>
      </div>
    </div>
  </div>
  <h2>  Insert Instructor Record</h2>

  <div class="" id="#addPostModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header bg-primary text-white">
          <h5 class="modal-title">Add New Instructor</h5>
          <!-- <button class="close" data-dismiss="modal"><span>&times;</span></button> -->
        </div>
        <div class="modal-body">
          <!-- <form> -->
          <%=  form_for @instructor do |f| %>

            <div class="field form-group">
              <!-- <label for="title">Name</label> -->
              <%= f.label :first_name %>
              <!-- <input type="text" class="form-control"> -->
               <%= f.text_field :first_name, class:"form-control"  %>
            </div>
            <div class="form-group">
              <!-- <label for="title">Instructor</label> -->
              <%= f.label :last_name %>
              <!-- <input type="text" class="form-control"> -->
               <%= f.text_field :last_name, class:"form-control"  %>
            </div>
            <div class="form-group">
              <%= f.label :DOB %>
              <!-- <label for="title">Start Date</label> -->
              <!-- <input type="text" class="form-control"> -->
              <%= f.date_field :dob, class:"form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :highest_education %>
              <!-- <label for="title">Start Date</label> -->
              <!-- <input type="text" class="form-control"> -->
              <%= f.text_field :highest_education, class:"form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :salary %>
              <!-- <label for="title">Start Date</label> -->
              <!-- <input type="text" class="form-control"> -->
              <%= f.text_field :salary, class:"form-control" %>
            </div>
              <!-- </form> -->

        <div class="modal-footer">
          <!-- <button class="btn btn-secondary" data-dismiss="modal">Close</button> -->
          <!-- <button class="btn btn-primary" data-dismiss="modal">Save Changes</button> -->
          <!-- <button class="btn btn-primary"   >Save Changes</button> -->
          <%= f.submit "Save", class:"btn btn-primary" %>
        </div>
        <% end %>
      <!-- </div> -->
    </div>
  </div>
