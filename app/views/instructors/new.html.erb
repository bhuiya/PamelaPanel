<h3> Create a New Instructor  </h3>
<%= render 'form.index' %>
<div class="backend_header" id="main-header" class="py-2 bg-primary text-white">
  <div class="container">
   <div class="row">
    <div class="col-md-6">
     <h1>  <i class="fa fa-plus"></i> Insert New Instructor </h1>
    </div>
   </div>
  </div>
</div>
<h2>  Insert Instructor Record</h2>
<div class="" id="#addPostModal">
 <div class="modal-dialog modal-lg">
  <div class="modal-content">
   <div class="modal-header bg-primary text-white">
    <h5 class="modal-title">Add New Instructor</h5>
   </div>
   <div class="modal-body">
    <%=  form_for @instructor do |f| %>
     <div class="field form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class:"form-control"  %>
     </div>
     <div class="form-group">
       <%= f.label :last_name %>
       <%= f.text_field :last_name, class:"form-control"  %>
     </div>
     <div class="form-group">
       <%= f.label :DOB %>
       <%= f.date_field :dob, class:"form-control" %>
     </div>
     <div class="form-group">
       <%= f.label :highest_education %>
       <%= f.text_field :highest_education, class:"form-control" %>
     </div>
     <div class="form-group">
       <%= f.label :salary %>
       <%= f.text_field :salary, class:"form-control" %>
     </div>
     <div class="modal-footer">
       <%= f.submit "Save", class:"btn btn-primary" %>
     </div>
    <% end %>
    </div>
  </div>
